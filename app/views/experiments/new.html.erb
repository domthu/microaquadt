<% form_for(@experiment) do |f| %>
  <%= f.error_messages %>

  <div class="actions">
    <%= f.submit 'Create' %>
  </div>

<fieldset><legend class="leg">GENERAL DATA</legend>

<table width="95%"><tr><td>
  
  <div class="field cod hide">
    <%= f.label :microarraygal_id %><br />
    <%= select :experiment,:microarraygal_id, Microarraygal.find(:all).collect{|p| [p.id]}%>
  </div> 

  <div class="field cod hide">
    <%= f.label :filter_sample_id, "Filter sample ID" %><br />
    <%= select :experiment,:filter_sample_id, FilterSample.find(:all).collect{|p| [p.id]} %>
  </div>
  
  <div class="field cod hide">
    <%= f.label :code, "Filter Microaqua code" %><br />
    <h2><%= @codegen %></h2>
  </div>

  <div class="field select">
    <%= f.label :partner_id %><br />
    <%= select :experiment,:partner_id, Partner.find(:all).collect{|p| [p.verbose_me, p.id]}%>
  </div>


   <div class="field select">
    <%= f.label :filter_sample_code  %><br />
    <%= select :experiment,:filter_sample_code, FilterSample.find(:all).collect{|p| [p.code]}%>
  </div>

   <div class="field select">
    <%= f.label :people_id, "Person" %><br />
    <%= select :experiment,:people_id, peoples_by_partner.collect{|p| [p.verbose_me, p.id]}%>
  </div>
 

</td><td>

   <div class="field txt">
    <%= f.label :barcode, "Partner barcode" %><br />
    <%= f.text_field :barcode %>
  </div>
 
  <div class="field date">
    <%= f.label :experiment_date, "Uploaded at" %><br />
    <%= f.date_select :experiment_date %>
  </div> 

  <div class="field select">
    <%= f.label :galTitle, "Associated .gal file title" %><br />
    <%= select :experiment,:galTitle,Microarraygal.find(:all).collect{|p| [p.verbose_me]}%>

</td><tr></table>

</fieldset>

  <div class="field area">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
                          
  <div class="actions">
    <%= f.submit 'Create' %>
  </div>
<% end %>

