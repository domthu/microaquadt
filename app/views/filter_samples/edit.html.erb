<table>
  <tr class="taleft" width="70%"><td class="taleft">
    <ul class="navigation round taleft">
      <li><%= link_to "code type", code_types_path %></li>
      <li><%= link_to "protocol filter", wfilters_path %></li>
    </ul>
  </td></tr>
</table>

<h1>Editing filter sample</h1>

<% form_for(@filter_sample) do |f| %>
  <%= f.error_messages %>

<fieldset><legend class="leg">GENERAL DATA</legend>

  <div class="field select">
    <%= f.label :sampling_id, "selected sampling" %><br />
    <h3><%= @sampling.verbose_me%></h3>
  </div>
  <div class="field cod">
    Code<br />
    <h2><%= @code %></h2>
  </div>

  <div class="field select">
    <%= f.label :wfilter_id, "Filter-pore size (μ)" %><br />
    <h3><%= @wfilter.verbose_me%></h3>
  </div>

  <div class="field num">
    <%= f.label :num_filters, "Number of filters" %><br />
    <%= f.text_field :num_filters %>
  </div>
  <div class="field num">
    <%= f.label :volume, "Average Liters of water per filter" %><br />
    <%= f.text_field :volume %>
  </div>
  <div class="field txt">
    <%= f.label :barcode, "Partner barcode" %><br />
    <%= f.text_field :barcode %>
  </div>

</fieldset>

<fieldset><legend class="leg">ENVIRONMENT DATA</legend>

  <div class="field date">
    <%= f.label :samplingDate %><br />
    <%= date_select :filter_sample, :samplingDate %>
  </div>
  <div class="field num">
    <%= f.label :temperature %><br />
    <%= f.text_field :temperature %>
  </div>
  <div class="field num">
    <%= f.label :conductivity, "Conductivity (µS/cm)" %><br />
    <%= f.text_field :conductivity %>
  </div>
  <div class="field num">
    <%= f.label :phosphates %><br />
    <%= f.text_field :phosphates %>
  </div>
  <div class="field num">
    <%= f.label :nitrates %><br />
    <%= f.text_field :nitrates %>
  </div>
  <div class="field num">
    <%= f.label :ph, "pH " %><br />
    <%= f.text_field :ph %>
  </div>

</fieldset>

  <div class="field area">
    <%= f.label :note %><br />
    <%= f.text_area :note, :size => "60x12"  %>
  </div>
<br />
  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>

<%= link_to 'Show', @filter_sample %> |
<%= link_to 'Back', filter_samples_path %>

