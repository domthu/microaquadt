<%= javascript_include_tag 'ym4r-gm.js' %>
<%= GMap.header %>

<table>
<tr class="taleft" width="70%"><td class="taleft">
    <ul class="navigation round taleft">
      <li><%= link_to "land use mapping", land_use_mappings_path %></li>
      <li><%= link_to "water use", water_uses_path %></li>
      <li><%= link_to "water type", water_types_path %></li>
      <li><%= link_to "geo", geos_path %></li>
      <li><%= link_to "alt. type", altitude_types_path %></li>
      <li><%= link_to "catchment area", catchment_areas_path %></li>
      <li><%= link_to "depth", depths_path %></li>
      <li><%= link_to "size type", size_typologies_path %></li>
      <li><%= link_to "geology", geologies_path %></li>
    </ul>
  </td></tr>
<tr class="taleft" width="70%"><td class="taleft">
    <ul class="navigation round taleft">
      <li><%= link_to "country", countries_path %></li>
    </ul>
  </td></tr>
</table>

<h1>Geographical positions</h1>
<%= link_to 'New geo', new_geo_path %>
<br />
<br />

<table>
  <tr>
    <th>Name</th>
    <th>Lon</th>
    <th>Lat</th>
    <th>Country</th>
  </tr>

<% @geos.each do |geo| %>
  <tr>
    <td><%=h geo.name %></td>
    <td><%=h geo.lng_name %></td>
    <td><%=h geo.lat_name %></td>
    <td><%=h Country.find(geo.country_id).verbose_me %></td>
    <td><%= link_to 'Show', geo %></td>
    <td><%= link_to 'Edit', edit_geo_path(geo) %></td>
    <td><%= link_to 'Delete', geo, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
