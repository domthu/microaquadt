
<table>
<tr class="taleft" width="70%"><td class="taleft">
    <ul class="navigation round taleft">
      <li><%= link_to "country", countries_path %></li>
    </ul>
  </td></tr>
</table>

<h1>Editing Geographical position</h1>

<% form_for(@geo) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :lon %><br />
    <%= f.text_field :lon %>
  </div>
  <div class="field">
    <%= f.label :lat %><br />
    <%= f.text_field :lat %>
  </div>

  <div class="field select">
    <%= f.label :country_id, "Select country" %><br />
    <%= select :geo,:country_id,Country.find(:all).collect{|p| [p.verbose_me, p.id]}%>
  </div>
<br />
  <div class="actions">
    <%= f.submit 'Update' %>
  </div>
<% end %>

<%= link_to 'Show', @geo %> |
<%= link_to 'Back', geos_path %>

