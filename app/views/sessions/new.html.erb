<h2>Sign in</h2>

<% form_for(:session, :url => sessions_path) do |f| %>
  <div class="login">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field" style="display:none;">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="login">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<div style="display:none;">
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>

