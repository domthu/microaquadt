<h1>Listing water samples</h1>

<table>
  <tr>
    <th>Sampling</th>
    <th>Code</th>
    <th>Partner</th>
  </tr>

<% @water_samples.each do |water_sample| %>
  <tr>
    <td><%=h water_sample.sampling.verbose_me %></td>
    <td><%=h water_sample.code %></td>
    <td><%=h water_sample.sampling.partner.verbose_me %></td>
    <% if  auth_sample_user(water_sample.sampling_id) %>
      <td><%= link_to 'Show', water_sample %></td>
      <td><%= link_to 'Edit', edit_water_sample_path(water_sample) or signed_in_and_master? %></td>
      <td><%= link_to 'Delete', water_sample, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

