<h1>New micropost</h1>

<% form_for(@micropost) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>

  <div class="actions">
    <%= f.submit 'Create' %>
  </div>


<% end %>

<%= link_to 'Back', microposts_path %>
