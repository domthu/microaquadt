<h1>New partner</h1>

<% form_for(@partner) do |f| %>
  <%= f.error_messages %>

  <div class="field txt">
    <%= f.label :fp7_Number %><br />
    <%= f.text_field :fp7_Number %>
  </div>
  <div class="field txt">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country_id, "Select country" %><br />
    <%= select :sampling_site,:country_id,Country.find(:all).collect{|p| [p.verbose_me, p.id]}%>
  </div>
  <div class="field area">
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </div>
  <div class="field txt">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field txt">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field txt">
    <%= f.label :site %><br />
    <%= f.text_field :site %>
  </div>

  <div class="actions">
    <%= f.submit 'Create' %>
  </div>
<% end %>

<%= link_to 'Back', partners_path %>

