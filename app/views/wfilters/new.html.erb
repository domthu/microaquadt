<h1>New filter</h1>
<%= link_to 'Back', wfilters_path %>
<br />
<br />
<% form_for(@wfilter) do |f| %>
  <%= f.error_messages %>

  <div class="actions">
    <%= f.submit 'Create' %>
  </div>

  <div class="field num">
    <%= f.label :pore_size, "Pore size filter" %><br />
    <%= f.text_field :pore_size %>
  </div>
  <div class="field txt">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field area">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit 'Create' %>
  </div>

<% end %>

<%= link_to 'Back', wfilters_path %>

